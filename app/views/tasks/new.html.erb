<% provide(:title, "New Task") %>
<div class="container">
  <div class="container">
    <h1>タスク新規作成</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @task, url: user_tasks_path, local: true, method: :post) do |f| %>
          
          <%= f.label :name, "名称", class: "label-form" %>
          <%= f.text_field :name, class: "form-control", value: "" %>
          
          <%= f.label :detail, "詳細", class: "label-form" %>
          <%= f.text_area :detail, class: "form-control", rows: 5, value: "" %>
          
          <%= link_to "新規登録", user_tasks_path(@user), class: "btn btn-lg btn-primary btn-form" %>
        <% end %>
      </div>
    </div>
  </div>
</div>