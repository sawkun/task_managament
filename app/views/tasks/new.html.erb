<% provide(:title, "New Task") %>
<div class="container">
  <div class="container">
    <h1>タスク新規作成</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @user, url: user_tasks_path(:user_id), local: true) do |f| %>
          
          <%= f.label :name, class: "label-form" %>
          <%= f.text_field :name, class: "form-control" %>
          
          <%= f.label :detail, class: "label-form" %>
          <%= f.text_area :detail, class: "form-control", rows: 5 %>
          
          <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
        <% end %>
      </div>
    </div>
  </div>
</div>