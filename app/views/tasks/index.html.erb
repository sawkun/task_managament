<% provide(:title, current_user.name) %>
<div class="container">
  <h1><%= current_user.name %>のタスク一覧</h1>
  <div class="col-md-10 col-md-offset-1">
    <a class="btn btn-lg btn-primary pull-right" href="/users/1/tasks/new">タスク新規作成</a>
    <table class="table table-hover", id="table-tasks">
      <thead>
        <tr>
          <th>名称</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td>
              <%= link_to task.name, user_task %>
            </td>
            <td>
              <%= task.created_at %>
            </td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>