<% provide(:title, current_user.name) %>
<div class="container">
  <h1><%= current_user.name %>のタスク一覧</h1>
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_user_task_path(current_user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th>名称</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.created_at %></td>
            <td>
              <a class="btn btn-success">編集</a>
              <a class="btn btn-danger" rel="nofollow" data-method="delete" >削除</a>
            </td>
          </tr>
        <% end %>
      </tbody>
      
    </table>
  </div>
</div>